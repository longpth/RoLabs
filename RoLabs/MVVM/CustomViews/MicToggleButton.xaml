<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rolabs.MVVM.CustomViews.MicToggleButton"
             x:Name="MicButtonView">

    <Grid HorizontalOptions="Center"
          VerticalOptions="Center">

        <ImageButton x:Name="MicButton"
                     Source="microphone_off.png"
                     WidthRequest="{Binding ButtonWidthRequest, Source={x:Reference MicButtonView}}"
                     HeightRequest="{Binding ButtonHeightRequest, Source={x:Reference MicButtonView}}"
                     Aspect="AspectFit"
                     Clicked="OnMicButtonClicked"/>
    </Grid>
</ContentView>
