<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rolabs.MVVM.CustomViews.DoubleBufferImage">
    <VerticalStackLayout>
        <Grid>
            <!-- Define a single row and a single column -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image x:Name="Image1" WidthRequest="480" HeightRequest="640"/>
            <Image x:Name="Image2" WidthRequest="480" HeightRequest="640"/>
            <Image x:Name="Image3" WidthRequest="480" HeightRequest="640"/>
        </Grid>
    </VerticalStackLayout>
</ContentView>
