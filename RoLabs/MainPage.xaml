<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Rolabs.MVVM.Views;assembly=Rolabs"
             x:Class="Rolabs.MainPage">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Spacing="20">
            <views:MainView x:Name="MainView" />
            <!-- Button to navigate to VisionPage -->
            <Button Text="Vision"
                Clicked="OnVisionButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>